{
    "name": "Home Page Layout",
    "allowed_sections": [
        "hero_banner",
        "brands",
        "new_arrivals",
        "top_vendors",
        "featured_categories",
        "customers_review",
        "newsletter"
    ],
    "fields": {
        "hero_banner": {
            "title": {
                "type": "string",
                "required": true,
                "max_length": 100
            },
            "subtitle": {
                "type": "text",
                "required": false,
                "max_length": 300
            },
            "button_text": {
                "type": "string",
                "default": "Shop Now",
                "max_length": 20
            },
            "banner_image": {
                "type": "image",
                "required": true
            },
            "analytics": {
                "1": {
                    "name": "string",
                    "number": "integer"
                },
                "2": {
                    "name": "string",
                    "number": "integer"
                },
                "3": {
                    "name": "string",
                    "number": "integer"
                }
            }
        },
        "brands": {

        }
    }
}
