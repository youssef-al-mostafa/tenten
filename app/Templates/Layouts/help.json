{
    "name": "Help Page Layout",
    "sections": [
        "hero_section",
        "vendor_verification",
        "commission_structure",
        "product_approval",
        "cta_section"
    ],
    "fields": {
        "hero_section": {
            "title": {
                "type": "string",
                "required": true,
                "default": "Help & Support",
                "max_length": 100
            },
            "subtitle": {
                "type": "text",
                "required": true,
                "default": "Everything you need to know about our marketplace, vendor processes, and policies",
                "max_length": 300
            }
        },
        "vendor_verification": {
            "title": {
                "type": "string",
                "required": true,
                "default": "Vendor Verification Process"
            },
            "description": {
                "type": "text",
                "required": true,
                "default": "Our comprehensive verification process ensures only quality vendors join our marketplace, creating a trusted environment for both buyers and sellers."
            },
            "steps": {
                "type": "repeater",
                "fields": {
                    "step_number": {
                        "type": "integer",
                        "required": true
                    },
                    "title": {
                        "type": "string",
                        "required": true,
                        "max_length": 100
                    },
                    "description": {
                        "type": "text",
                        "required": true,
                        "max_length": 500
                    },
                    "icon_color": {
                        "type": "string",
                        "default": "blue"
                    }
                },
                "min_items": 1,
                "default": [
                    {
                        "step_number": 1,
                        "title": "Application Submission",
                        "description": "Submit your vendor application with business details, contact information, and product categories you wish to sell.",
                        "icon_color": "blue"
                    },
                    {
                        "step_number": 2,
                        "title": "Document Verification",
                        "description": "Our team reviews your business documentation, tax ID, and identity verification to ensure legitimacy.",
                        "icon_color": "green"
                    },
                    {
                        "step_number": 3,
                        "title": "Review Process",
                        "description": "Verification typically takes 3-5 business days. You'll receive email updates throughout the process.",
                        "icon_color": "purple"
                    },
                    {
                        "step_number": 4,
                        "title": "Approval & Onboarding",
                        "description": "Once approved, you'll receive access to your vendor dashboard and can start listing products immediately.",
                        "icon_color": "yellow"
                    }
                ]
            },
            "requirements_title": {
                "type": "string",
                "default": "Required Documents"
            },
            "processing_time": {
                "type": "string",
                "default": "3-5 business days"
            },
            "documents": {
                "type": "repeater",
                "fields": {
                    "name": {
                        "type": "string",
                        "required": true
                    }
                },
                "default": [
                    {
                        "name": "Business Registration Certificate"
                    },
                    {
                        "name": "Tax Identification Number"
                    },
                    {
                        "name": "Government-issued ID"
                    },
                    {
                        "name": "Bank Account Information"
                    },
                    {
                        "name": "Product Quality Samples (if applicable)"
                    }
                ]
            }
        },
        "commission_structure": {
            "title": {
                "type": "string",
                "required": true,
                "default": "Commission & Fee Structure"
            },
            "fees": {
                "type": "repeater",
                "fields": {
                    "name": {
                        "type": "string",
                        "required": true
                    },
                    "percentage": {
                        "type": "string",
                        "required": true
                    },
                    "description": {
                        "type": "text",
                        "required": true
                    },
                    "icon_color": {
                        "type": "string",
                        "default": "blue"
                    }
                },
                "default": [
                    {
                        "name": "Platform Commission",
                        "percentage": "5%",
                        "description": "We charge a competitive 5% commission on each successful sale",
                        "icon_color": "blue"
                    },
                    {
                        "name": "Listing & Setup",
                        "percentage": "Free",
                        "description": "No upfront costs to list products or set up your store",
                        "icon_color": "green"
                    },
                    {
                        "name": "Payment Processing",
                        "percentage": "2.9% + 30Â¢",
                        "description": "Standard Stripe processing fees for secure transactions",
                        "icon_color": "purple"
                    }
                ]
            },
            "payout_info": {
                "type": "text",
                "default": "Payouts are processed monthly on the 1st of each month for the previous month's sales. Minimum payout threshold is $10."
            }
        },
        "product_approval": {
            "title": {
                "type": "string",
                "required": true,
                "default": "Product Approval Guidelines"
            },
            "approval_process_title": {
                "type": "string",
                "default": "Approval Process"
            },
            "approval_process_steps": {
                "type": "repeater",
                "fields": {
                    "step_number": {
                        "type": "integer",
                        "required": true
                    },
                    "title": {
                        "type": "string",
                        "required": true
                    },
                    "description": {
                        "type": "text",
                        "required": true
                    }
                },
                "default": [
                    {
                        "step_number": 1,
                        "title": "Product Submission",
                        "description": "Submit your product with complete details, high-quality images, and accurate descriptions."
                    },
                    {
                        "step_number": 2,
                        "title": "Quality Review",
                        "description": "Our team reviews product quality, pricing, and compliance with marketplace policies."
                    },
                    {
                        "step_number": 3,
                        "title": "Approval Decision",
                        "description": "Products are approved within 24-48 hours. Rejected items include feedback for improvement."
                    }
                ]
            },
            "quality_standards_title": {
                "type": "string",
                "default": "Quality Standards"
            },
            "approved_items": {
                "type": "repeater",
                "fields": {
                    "item": {
                        "type": "string",
                        "required": true
                    }
                },
                "default": [
                    {
                        "item": "High-quality, authentic merchandise"
                    },
                    {
                        "item": "Clear, professional product images"
                    },
                    {
                        "item": "Accurate descriptions and specifications"
                    },
                    {
                        "item": "Competitive and fair pricing"
                    },
                    {
                        "item": "Compliant with safety regulations"
                    }
                ]
            },
            "prohibited_items": {
                "type": "repeater",
                "fields": {
                    "item": {
                        "type": "string",
                        "required": true
                    }
                },
                "default": [
                    {
                        "item": "Counterfeit or fake products"
                    },
                    {
                        "item": "Illegal or restricted items"
                    },
                    {
                        "item": "Used or damaged goods"
                    },
                    {
                        "item": "Items without proper documentation"
                    },
                    {
                        "item": "Products violating intellectual property"
                    }
                ]
            },
            "quality_approval_rate": {
                "type": "string",
                "default": "92% for products meeting our quality standards"
            }
        },
        "cta_section": {
            "title": {
                "type": "string",
                "required": true,
                "default": "Ready to Start Selling?"
            },
            "description": {
                "type": "text",
                "required": true,
                "default": "Join thousands of successful vendors on our platform and start growing your business today."
            },
            "button_text": {
                "type": "string",
                "default": "Become a Vendor"
            },
            "button_link": {
                "type": "string",
                "default": "/register"
            }
        }
    }
}
